{# templates/emails/new_publication_notification.html.twig #}

<!DOCTYPE html>
<html>
<head>
    <title>New Publication Notification</title>
</head>
<body>
    <h1>New Publication Created</h1>

    <p>Hello {{ currentUser.getNom() }},</p>

    <p>A new publication has been created by {{ publication.getIdUser().getNom() }}.</p>

    <p>Publication Details:</p>
    <ul>
        <li>Title: {{ publication.getTitre() }}</li>
        <li>Content: {{ publication.getDescription() }}</li>
        <!-- Add more details as needed -->
    </ul>

    <p>Thank you!</p>
</body>
</html>
